app.controller "ApplicationController", ($scope) ->

app.controller "GalleriesController", ($scope, $http, $location, $state, $stateParams, Galleries) ->
  $scope.gallery = {}
  $scope.galleries = {}

  if $state.current.name == 'galleries'
    Galleries.query({}
    , (response) ->
      $scope.galleries = response
    , (response) ->
      # do stuff on error
    )

  if $state.current.name == 'show'
    Galleries.get
      id: $stateParams['id']
    , (response) ->
      $scope.gallery = response
    , (response) ->
      # do stuff on error

  $scope.create = ->
    Galleries.save(
      {}
    , gallery:
        title: $scope.gallery.title
    , (response) ->
      $location.path ""
    , (response) ->
      # do stuff on error
    )

  if $state.current.name == 'edit'
    Galleries.get
      id: $stateParams['id']
    , (response) ->
      $scope.gallery = response
    , (response) ->

  $scope.update = ->
    Galleries.update
      id: $stateParams['id']
    , gallery:
        title: $scope.gallery.title
    , (response) ->
      $location.path ""
    , (response) ->

  $scope.destroy = (id) ->
    Galleries.delete
      id: id
    , (response) ->
      i = 0
      while i < $scope.galleries.length
        if $scope.galleries[i]['id'] is id
          $scope.galleries.splice(i,1)
        i++
    , (response) ->