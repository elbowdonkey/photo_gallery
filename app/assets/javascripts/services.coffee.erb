# http://docs.angularjs.org/#!angular.service
angular.service "Galleries", ($resource) ->
  $resource "", {},
    index:
      method: "GET"
      isArray: true


angular.service "Gallery", ($resource) ->
  $resource ":gallery_id", {},
    create:
      method: "POST"

    index:
      method: "GET"
      isArray: true

    update:
      method: "PUT"

    destroy:
      method: "DELETE"

angular.service "Photos", ($resource) ->
  $resource ":gallery_id/photos", {},
    index:
      method: "GET"
      isArray: true


angular.service "Photo", ($resource) ->
  $resource ":gallery_id/photos/:photo_id", {},
    create:
      method: "POST"

    index:
      method: "GET"
      isArray: true

    update:
      method: "PUT"

    destroy:
      method: "DELETE"

